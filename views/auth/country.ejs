<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (couns.length!=0) { %>
        <form class="login-form" action="/usercountry" method="POST">
            <div class="form-control">
                <label for="country">first select country</label>
                <select name="countryId" id="cars">
                    <% for (let country of couns) { %>
                        <option  value="<%= country._id %>""><%= country.nameEn %></option>
                    <% } %>
                  </select>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
        <% } else { %>
            <p style="color: red">you can not sign up because there are no countries in DB</p>
            <% } %>
            <% if (err) { %>
                <p style="color: red"><%= errMsg %></p>
                <% } %>
    </main>
<%- include('../includes/end.ejs') %>