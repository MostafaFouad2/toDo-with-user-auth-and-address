<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/editAddr" method="POST">
            <div class="form-control">
                <label for="nameEn">EN Name</label>
                <input type="text" name="nameEn" id="nameEn" value="<%= country.nameEn %>">
            </div>
            <div class="form-control">
                <label for="nameAr">AR Name</label>
                <input type="text" name="nameAr" id="nameAr" value="<%= country.nameAr %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">imageUrl</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= country.imageUrl %>">
            </div>
            <input type="hidden" value="<%= country._id %>" name="countryId">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Edit</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>